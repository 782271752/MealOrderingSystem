<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_large"
    android:minHeight="@dimen/height_large">

    <ImageView
        android:id="@+id/preferential_dialog_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large"
        android:minHeight="@dimen/height_large"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/preferential_dialog_checked_iv"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/icon_radio_checked" />
</FrameLayout>